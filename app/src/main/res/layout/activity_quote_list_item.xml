<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@color/teal_200">


    <TextView
        android:id="@+id/IdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="QuoteId"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/QuoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today is the day"
        android:textSize="18dp"
        android:layout_below="@+id/IdTextView"
        android:layout_marginLeft="10dp"
        android:textColor="@color/purplestack" />

    <TextView
        android:id="@+id/AuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allantoiz"
        android:layout_below="@+id/QuoteTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textStyle="italic"
        android:textColor="@color/purplePink"/>


</RelativeLayout>